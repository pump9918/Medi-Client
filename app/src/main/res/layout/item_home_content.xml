<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="14dp"
    android:background="@drawable/rect_main_back_color_radius_15"
    android:elevation="4dp">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_item_home_meditation"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Radius10"
        tools:src="@drawable/medi_dummy"/>

    <TextView
        android:id="@+id/tv_item_home_meditation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="7dp"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_home_meditation"
        tools:text="함께하는 명상 - 정각원" />

    <ImageView
        android:id="@+id/iv_item_home_meditation_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/ic_menu_mypage"
        app:layout_constraintStart_toStartOf="@+id/tv_item_home_meditation_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_home_meditation_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_item_home_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_home_meditation_writer"
        app:layout_constraintStart_toEndOf="@+id/iv_item_home_meditation_writer"
        app:layout_constraintTop_toTopOf="@+id/iv_item_home_meditation_writer"
        tools:text="꽃스님" />

</androidx.constraintlayout.widget.ConstraintLayout>